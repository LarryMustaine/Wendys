<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.larrystudio.blondie"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <supports-screens
        android:anyDensity="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <application
        android:name="com.larrystudio.blondie.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="com.larrystudio.blondie.LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.larrystudio.about.About"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.larrystudio.blondie.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.larrystudio.blondie.PasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.larrystudio.images.ImageZoomActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.larrystudio.videos.FullScreenVideoActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>